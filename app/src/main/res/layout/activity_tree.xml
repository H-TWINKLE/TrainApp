<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:orientation="vertical"
    android:id="@+id/view_tree"
     >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="17dp"
            android:textSize="20sp"
            android:text="@string/title_activity_live" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/ivw_tree_login"
            android:layout_gravity="right|center"
            android:layout_width="60dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/login" />

        <ImageView
            android:id="@+id/ivw_tree_fsh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="3dp"
            app:srcCompat="?attr/homeAsUpIndicator" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:background="@drawable/app_lvjian_rbtn_normal_background"
        android:orientation="vertical"
        android:padding="8dp" >

        <com.yalantis.phoenix.PullToRefreshView
            android:layout_width="match_parent"
            android:id="@+id/ptr_tree"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lvw_tree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"/>


        </com.yalantis.phoenix.PullToRefreshView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ett_tree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/app_lvjian_rbtn_normal_background"
            android:gravity="center|start"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_tree"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="64dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:layout_marginRight="4dp"
            android:background="@drawable/app_lvjian_chat_sends" />
    </LinearLayout>

</LinearLayout>
